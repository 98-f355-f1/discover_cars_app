<div>
  <h1 class="font-bold text-3xl">Login</h1>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="mt-3"><%= f.label :username %></div>
    <div><%= f.text_field :username %></div>
    <div class="mt-3"><%= f.label :password %></div>
    <div><%= f.password_field :password %></div>

    <%= f.submit "Login", class: "inline-block w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 mt-3 sm:w-auto" %>
  <%end%>
</div>
